{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2020",                  // modern JS that Node understands
    "module": "CommonJS",                // for Node.js
    "esModuleInterop": true,             // allows "import express from 'express'"
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node", "express"],

    /* Source Maps (optional, useful for debugging) */
    "sourceMap": true,

    /* Stricter Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Other Useful Options */
    "skipLibCheck": true
  },
  "include": ["src"],     // only compile src files
  "exclude": ["node_modules", "dist"] 
}
